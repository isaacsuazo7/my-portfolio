---
import IconGitHub from './icons/IconGitHub.astro';
import IconLinkedin from './icons/IconLinkedin.astro';
import IconTwitter from './icons/IconTwitter.astro';
import IconInstagram from './icons/IconInstagram.astro';
import IconCodepen from './icons/IconCodepen.astro';
import { useTranslations } from '@i18n/utils';
import type { Locale } from '@i18n/constants';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const t = useTranslations(locale);
---

<footer>
  <div class="social-links-mobile">
    <ul>
      {t.social.profiles.map(social => (
        <li>
          <a href={social.url} aria-label={social.name} target="_blank" rel="noreferrer">
            {social.icon === 'github' && <IconGitHub />}
            {social.icon === 'linkedin' && <IconLinkedin />}
            {social.icon === 'twitter' && <IconTwitter />}
            {social.icon === 'instagram' && <IconInstagram />}
            {social.icon === 'codepen' && <IconCodepen />}
          </a>
        </li>
      ))}
    </ul>
  </div>
  <div class="credit">
    <a href="https://brittanychiang.com" target="_blank" rel="noreferrer">
      {t.footer.inspiredBy} {t.footer.inspiredByName}
    </a>
    <span class="separator">&middot;</span>
    <a href={t.social.profiles[0].url} target="_blank" rel="noreferrer">
      {t.footer.builtBy} {t.footer.builtByName}
    </a>
  </div>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 70px;
    padding: 15px;
    text-align: center;
  }

  .social-links-mobile {
    display: none;
    margin-bottom: 10px;
  }

  @media (max-width: 768px) {
    .social-links-mobile {
      display: block;
    }
  }

  .social-links-mobile ul {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    padding: 0;
    margin: 0;
    list-style: none;
    max-width: 270px;
  }

  .social-links-mobile a {
    padding: 10px;
    display: inline-block;
    color: var(--light-slate);
    transition: var(--transition);
  }

  .social-links-mobile a:hover {
    color: var(--flutter-blue);
  }

  .social-links-mobile :global(svg) {
    width: 20px;
    height: 20px;
  }

  .credit {
    font-family: var(--font-mono);
    font-size: var(--fz-xxs);
    line-height: 1;
  }

  .separator {
    margin: 0 0.5em;
    color: var(--slate);
  }

  .credit a {
    color: var(--light-slate);
    text-decoration: none;
    padding: 10px;
    transition: var(--transition);
  }

  .credit a:hover {
    color: var(--flutter-blue);
  }
</style>
