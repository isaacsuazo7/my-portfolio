<section id="hero">
  <h1 class="hero-overline hero-anim fadeup-enter">Hi, my name is</h1>
  <h2 class="big-heading hero-name hero-anim fadeup-enter">Isaac Suazo.</h2>
  <h3 class="big-heading hero-subtitle hero-anim fadeup-enter">I build things for the web.</h3>
  <p class="hero-description hero-anim fadeup-enter">
    I'm a software engineer specializing in building (and occasionally designing)
    exceptional digital experiences. Currently, I'm focused on building accessible,
    human-centered products at
    <a class="inline-link" href="https://example.com" target="_blank" rel="noreferrer">Example Corp</a>.
  </p>
  <a class="btn btn-big hero-cta hero-anim fadeup-enter" href="mailto:hello@example.com">
    Get In Touch
  </a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
    padding: 0;
  }

  .hero-overline {
    margin: 0 0 30px 4px;
    color: var(--flutter-blue);
    font-family: var(--font-mono);
    font-size: clamp(var(--fz-sm), 5vw, var(--fz-md));
    font-weight: 400;
  }

  .hero-name {
    color: var(--lightest-slate);
  }

  .hero-subtitle {
    color: var(--slate);
    margin-top: 5px;
  }

  .hero-description {
    max-width: 540px;
    margin-top: 20px;
  }

  .hero-cta {
    margin-top: 50px;
  }
</style>

<script>
  function initHeroAnimations() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const heroElements = document.querySelectorAll<HTMLElement>('.hero-anim');

    if (prefersReducedMotion) {
      heroElements.forEach(el => el.classList.add('fadeup-enter-active'));
      return;
    }

    function animate() {
      heroElements.forEach((el, i) => {
        setTimeout(() => {
          el.classList.add('fadeup-enter-active');
        }, i * 100);
      });
    }

    document.addEventListener('loader-complete', animate);
  }

  document.addEventListener('DOMContentLoaded', initHeroAnimations);
</script>
