---
import { useTranslations } from '@i18n/utils';
import type { Locale } from '@i18n/constants';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const t = useTranslations(locale);
---

<section id="hero">
  <p class="hero-overline hero-anim fadeup-enter">{t.hero.greeting}</p>
  <h1 class="big-heading hero-name hero-anim fadeup-enter">{t.hero.name}</h1>
  <h2 class="big-heading hero-subtitle hero-anim fadeup-enter">{t.hero.tagline}</h2>
  <p class="hero-description hero-anim fadeup-enter">
    {t.hero.description}
    <a class="inline-link" href={t.hero.companyUrl} target="_blank" rel="noreferrer">{t.hero.companyName}</a>.
  </p>
  <a class="btn btn-big hero-cta hero-anim fadeup-enter" href={`mailto:${t.social.email}`}>
    {t.hero.ctaText}
  </a>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
    padding: 0;
  }

  .hero-overline {
    margin: 0 0 30px 4px;
    color: var(--flutter-blue);
    font-family: var(--font-mono);
    font-size: clamp(var(--fz-sm), 5vw, var(--fz-md));
    font-weight: 400;
  }

  .hero-name {
    color: var(--lightest-slate);
  }

  .hero-subtitle {
    color: var(--slate);
    margin-top: 5px;
    line-height: 0.9;
  }

  @media (max-width: 480px) {
    .hero-overline {
      margin: 0 0 20px 2px;
    }
  }

  .hero-description {
    max-width: 540px;
    margin-top: 20px;
  }

  .hero-cta {
    margin-top: 50px;
  }
</style>

<script>
  function initHeroAnimations() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const heroElements = document.querySelectorAll<HTMLElement>('.hero-anim');

    if (prefersReducedMotion) {
      heroElements.forEach(el => el.classList.add('fadeup-enter-active'));
      return;
    }

    heroElements.forEach((el, i) => {
      setTimeout(() => {
        el.classList.add('fadeup-enter-active');
        setTimeout(() => el.classList.remove('fadeup-enter'), 300);
      }, (i + 1) * 100);
    });
  }

  document.addEventListener('astro:page-load', initHeroAnimations);
</script>
