---
import { getCollection } from 'astro:content';
import { render } from 'astro:content';
import IconGitHub from '@icons/IconGitHub.astro';
import IconExternal from '@icons/IconExternal.astro';

const allFeatured = await getCollection('featured');
const projects = allFeatured.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<section id="featured" data-sr>
  <h2 class="numbered-heading">Some Things I've Built</h2>
  <ul class="featured-list">
    {projects.map(async (project, i) => {
      const { Content } = await render(project);
      return (
        <li class="featured-project" data-sr data-sr-delay={String(i * 100)}>
          <div class="project-content">
            <div>
              <p class="project-overline">Featured Project</p>
              <h3 class="project-title">
                <a href={project.data.external || project.data.github || '#'}>{project.data.title}</a>
              </h3>
              <div class="project-description">
                <Content />
              </div>
              <ul class="project-tech-list">
                {project.data.tech.map(t => <li>{t}</li>)}
              </ul>
              <div class="project-links">
                {project.data.github && (
                  <a href={project.data.github} aria-label="GitHub Link" target="_blank" rel="noreferrer">
                    <IconGitHub />
                  </a>
                )}
                {project.data.external && (
                  <a href={project.data.external} aria-label="External Link" target="_blank" rel="noreferrer">
                    <IconExternal />
                  </a>
                )}
              </div>
            </div>
          </div>
          <div class="project-image">
            <a href={project.data.external || project.data.github || '#'} target="_blank" rel="noreferrer">
              <img src={project.data.cover} alt={project.data.title} width="700" height="440" loading="lazy" />
            </a>
          </div>
        </li>
      );
    })}
  </ul>
</section>

<style>
  .featured-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .featured-project {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 10px;
    align-items: center;
    margin-bottom: 100px;
  }

  @media (max-width: 768px) {
    .featured-project {
      margin-bottom: 70px;
    }
  }

  /* Even items: content left, image right */
  .project-content {
    position: relative;
    grid-column: 1 / 7;
    grid-row: 1 / -1;
    z-index: 2;
  }
  .project-image {
    grid-column: 6 / -1;
    grid-row: 1 / -1;
    z-index: 1;
  }

  /* Odd items: content right, image left */
  .featured-project:nth-of-type(odd) .project-content {
    grid-column: 7 / -1;
    text-align: right;
  }
  .featured-project:nth-of-type(odd) .project-image {
    grid-column: 1 / 8;
  }
  .featured-project:nth-of-type(odd) .project-tech-list {
    justify-content: flex-end;
  }
  .featured-project:nth-of-type(odd) .project-links {
    justify-content: flex-end;
  }

  /* Mobile: stack everything */
  @media (max-width: 768px) {
    .project-content,
    .featured-project:nth-of-type(odd) .project-content {
      grid-column: 1 / -1;
      text-align: left;
      padding: 40px 40px 30px;
      z-index: 5;
    }
    .project-image,
    .featured-project:nth-of-type(odd) .project-image {
      grid-column: 1 / -1;
      height: 100%;
      opacity: 0.25;
    }
    .featured-project:nth-of-type(odd) .project-tech-list,
    .featured-project:nth-of-type(odd) .project-links {
      justify-content: flex-start;
    }
  }

  @media (max-width: 480px) {
    .project-content,
    .featured-project:nth-of-type(odd) .project-content {
      padding: 30px 25px 20px;
    }
  }

  /* Content styles */
  .project-overline {
    margin: 10px 0;
    color: var(--flutter-blue);
    font-family: var(--font-mono);
    font-size: var(--fz-xs);
    font-weight: 400;
  }

  .project-title {
    font-size: clamp(24px, 5vw, 28px);
    color: var(--lightest-slate);
    margin: 0 0 20px;
  }

  .project-title a {
    transition: var(--transition);
  }
  .project-title a:hover {
    color: var(--flutter-blue);
  }

  .project-description {
    position: relative;
    z-index: 2;
    padding: 25px;
    border-radius: var(--border-radius);
    background-color: var(--dark-gray);
    color: var(--light-slate);
    font-size: var(--fz-lg);
    box-shadow: 0 10px 30px -15px var(--shadow-color);
  }

  @media (max-width: 768px) {
    .project-description {
      padding: 20px 0;
      background-color: transparent;
      box-shadow: none;
    }
  }

  .project-description :global(p) {
    margin: 0;
  }

  .project-tech-list {
    display: flex;
    flex-wrap: wrap;
    position: relative;
    z-index: 2;
    margin: 25px 0 10px;
    padding: 0;
    list-style: none;
    gap: 15px;
  }

  .project-tech-list li {
    color: var(--light-slate);
    font-family: var(--font-mono);
    font-size: var(--fz-xs);
    white-space: nowrap;
  }

  .project-links {
    display: flex;
    align-items: center;
    position: relative;
    margin-top: 10px;
    margin-left: -10px;
  }
  .featured-project:nth-of-type(odd) .project-links {
    margin-left: 0;
    margin-right: -10px;
  }

  .project-links a {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    color: var(--light-slate);
    transition: var(--transition);
  }
  .project-links a:hover {
    color: var(--flutter-blue);
  }
  .project-links a svg {
    width: 20px;
    height: 20px;
  }

  /* Image styles */
  .project-image {
    position: relative;
  }

  .project-image a {
    display: block;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    border-radius: var(--border-radius);
    overflow: hidden;
    vertical-align: middle;
  }

  .project-image a::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 3;
    background-color: var(--flutter-blue);
    mix-blend-mode: screen;
    transition: var(--transition);
  }

  .project-image a:hover::before {
    background-color: transparent;
  }

  .project-image img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    filter: grayscale(100%) contrast(1) brightness(90%);
    transition: var(--transition);
  }

  @media (max-width: 768px) {
    .project-image img {
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%) contrast(1) brightness(50%);
    }
  }

  .project-image a:hover img {
    filter: none;
  }
</style>
