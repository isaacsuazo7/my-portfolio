---
import { useTranslations } from '@i18n/utils';
import type { Locale } from '@i18n/constants';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const t = useTranslations(locale);
---

<section id="contact" data-sr>
  <p class="contact-overline">{t.contact.overline}</p>
  <h2 class="medium-heading">{t.contact.heading}</h2>
  <p class="contact-description">{t.contact.description}</p>
  <a class="btn btn-big" href={`mailto:${t.social.email}`}>{t.contact.ctaText}</a>
</section>

<style>
  section {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .medium-heading {
    font-size: clamp(2.5rem, 5vw, 3.75rem);
  }

  .contact-overline {
    display: block;
    margin-bottom: 20px;
    color: var(--flutter-blue);
    font-family: var(--font-mono);
    font-size: var(--fz-md);
    font-weight: 400;
  }

  .contact-overline::before {
    display: none;
  }

  .contact-overline::after {
    display: none;
  }

  .contact-description {
    color: var(--slate);
    margin-top: 20px;
  }

  .btn {
    margin-top: 50px;
  }
</style>
