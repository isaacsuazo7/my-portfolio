---
import { getCollection } from 'astro:content';
import { render } from 'astro:content';
import IconFolder from '@icons/IconFolder.astro';
import IconGitHub from '@icons/IconGitHub.astro';
import IconExternal from '@icons/IconExternal.astro';

const GRID_LIMIT = 6;
const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(p => p.data.showInProjects)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<section id="other-projects">
  <h2 class="projects-title">Other Noteworthy Projects</h2>
  <a class="inline-link projects-archive-link" href="#">view the archive</a>

  <ul class="projects-grid">
    {projects.map(async (project, i) => {
      const { Content } = await render(project);
      return (
        <li class={`project-card ${i >= GRID_LIMIT ? 'hidden-card' : ''}`} data-sr data-sr-delay={String(i * 100)}>
          <div class="project-inner box-shadow">
            <header>
              <div class="project-top">
                <div class="folder">
                  <IconFolder />
                </div>
                <div class="project-links">
                  {project.data.github && (
                    <a href={project.data.github} aria-label="GitHub Link" target="_blank" rel="noreferrer">
                      <IconGitHub />
                    </a>
                  )}
                  {project.data.external && (
                    <a href={project.data.external} aria-label="External Link" target="_blank" rel="noreferrer">
                      <IconExternal />
                    </a>
                  )}
                </div>
              </div>
              <h3 class="project-title">
                <a href={project.data.external || project.data.github || '#'}>
                  {project.data.title}
                </a>
              </h3>
              <div class="project-description">
                <Content />
              </div>
            </header>
            <footer>
              <ul class="project-tech-list">
                {project.data.tech.map(t => <li>{t}</li>)}
              </ul>
            </footer>
          </div>
        </li>
      );
    })}
  </ul>

  {projects.length > GRID_LIMIT && (
    <button class="btn show-more-btn" id="show-more-btn">Show More</button>
  )}
</section>

<style>
  section {
    text-align: center;
  }

  .projects-title {
    font-size: clamp(24px, 5vw, var(--fz-heading));
    color: var(--lightest-slate);
    margin: 0;
  }

  .projects-archive-link {
    display: inline-block;
    margin: 10px 0 0;
    font-family: var(--font-mono);
    font-size: var(--fz-sm);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 15px;
    padding: 0;
    margin-top: 50px;
    list-style: none;
    position: relative;
  }

  @media (max-width: 1080px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
  }

  .hidden-card {
    display: none;
  }
  .hidden-card.visible {
    display: list-item;
  }

  .project-inner {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    height: 100%;
    padding: 2rem 1.75rem;
    border-radius: var(--border-radius);
    background-color: var(--dark-gray);
    transition: var(--transition);
    text-align: left;
  }

  .project-inner:hover {
    transform: translateY(-7px);
  }

  .project-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 35px;
  }

  .folder svg {
    width: 40px;
    height: 40px;
    color: var(--flutter-blue);
  }

  .project-links {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-right: -10px;
  }

  .project-links a {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5px 7px;
    color: var(--light-slate);
    transition: var(--transition);
  }
  .project-links a:hover {
    color: var(--flutter-blue);
  }
  .project-links a svg {
    width: 20px;
    height: 20px;
  }

  .project-title {
    margin: 0 0 10px;
    font-size: var(--fz-xxl);
    color: var(--lightest-slate);
  }
  .project-title a {
    transition: var(--transition);
  }
  .project-title a:hover {
    color: var(--flutter-blue);
  }

  .project-description {
    color: var(--light-slate);
    font-size: var(--fz-md);
  }
  .project-description :global(p) {
    margin: 0;
  }

  footer {
    margin-top: auto;
  }

  .project-tech-list {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 20px 0 0;
    list-style: none;
    gap: 0 15px;
  }
  .project-tech-list li {
    font-family: var(--font-mono);
    font-size: var(--fz-xxs);
    color: var(--slate);
    line-height: 1.75;
  }

  .show-more-btn {
    margin-top: 50px;
  }
</style>

<script>
  function initShowMore() {
    const btn = document.getElementById('show-more-btn');
    if (!btn) return;

    const hiddenCards = document.querySelectorAll('.hidden-card');
    let isExpanded = false;

    btn.addEventListener('click', () => {
      isExpanded = !isExpanded;
      hiddenCards.forEach(card => card.classList.toggle('visible', isExpanded));
      btn.textContent = isExpanded ? 'Show Less' : 'Show More';
    });
  }

  document.addEventListener('DOMContentLoaded', initShowMore);
</script>
