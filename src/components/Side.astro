---
interface Props {
  orientation: 'left' | 'right';
}

const { orientation } = Astro.props;
---

<div class={`side fade-enter ${orientation}`}>
  <slot />
</div>

<script>
  function initSideAnimations() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const sideElements = document.querySelectorAll<HTMLElement>('.side.fade-enter');

    if (prefersReducedMotion) {
      sideElements.forEach(el => el.classList.add('fade-enter-active'));
      return;
    }

    setTimeout(() => {
      sideElements.forEach(el => el.classList.add('fade-enter-active'));
    }, 400);
  }

  document.addEventListener('astro:page-load', initSideAnimations);
</script>

<style>
  .side {
    position: fixed;
    bottom: 0;
    width: 40px;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .left {
    left: 40px;
  }

  .right {
    right: 40px;
  }

  @media (max-width: 1080px) {
    .left {
      left: 20px;
    }
    .right {
      right: 20px;
    }
  }

  @media (max-width: 768px) {
    .side {
      display: none;
    }
  }
</style>
